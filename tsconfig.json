{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*", "**/*.ts", "node_modules/@noble"],
  "exclude": ["__sapper__/*", "public/*"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "moduleResolution": "node"
  }
}
